extends layout

block layout-content
    .section-header.text-center
      h2.text-center.text-gold.text-uppercase.mb-3 Books
      p.text-center.text-light-50 Explore captivating books
    .row.justify-content-center
      each book in bookList  
        .col-xl-3.col-lg-4.col-md-6.col-sm-12.mb-4
          .book-card
            .card-content
              img.card-img(src=`${book.volumeInfo.imageLinks.thumbnail}`, alt=`Cover of ${book.volumeInfo.title}`)
              .overlay
                h6.card-title.text-white #{book.volumeInfo.title}
                p.text-light-50.small By #{book.volumeInfo.authors ? book.volumeInfo.authors.join(', ') : 'Unknown Author'}
               
