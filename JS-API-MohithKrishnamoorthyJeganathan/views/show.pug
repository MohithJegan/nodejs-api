extends layout

block layout-content
  .container.py-5.bg-black.text-light
    // MOVIE SECTION
    .section-header.text-center
      h2.text-center.text-gold.text-uppercase.mb-3 Movies Inspired by "#{genreName}"
      p.text-center.text-light-50 Discover top-rated movies in this genre.
    .row.justify-content-center
      each movie in movieList
        .col-xl-3.col-lg-4.col-md-6.col-sm-12.mb-4
          .movie-card
            .card-content
              img.card-img(src=`https://image.tmdb.org/t/p/w500${movie.poster_path || '/9nlyhxpszQ34joVXMM2PjXvyBvn.jpg'}`, alt=`Poster of ${movie.original_title}`)
              .overlay
                h6.card-title #{movie.original_title}
                p.text-light-50.small #{`Released: ${movie.release_date}`}
                a.btn.btn-glow(href=`/movie/details/${movie.id}`) View Details

    // BOOK SECTION
    .section-header.mt-5.text-center
      h2.text-center.text-gold.text-uppercase.mb-3 Books Inspired by "#{genreName}"
      p.text-center.text-light-50 Explore captivating books in this genre.
    .row.justify-content-center
      each book in bookList  
        .col-xl-3.col-lg-4.col-md-6.col-sm-12.mb-4
          .book-card
            .card-content
              img.card-img(src=`${book.volumeInfo.imageLinks.thumbnail}`, alt=`Cover of ${book.volumeInfo.title}`)
              .overlay
                h6.card-title #{book.volumeInfo.title}
                p.text-light-50.small By #{book.volumeInfo.authors ? book.volumeInfo.authors.join(', ') : 'Unknown Author'}
                a.btn.btn-glow(href=`/book/details/${book.id}`) View Details
