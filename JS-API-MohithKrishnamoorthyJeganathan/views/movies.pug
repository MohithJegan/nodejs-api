extends layout

block layout-content
  .container.bg-black.text-light
    // MOVIE SECTION
    .section-header.text-center
      h2.text-center.text-gold.text-uppercase.mb-3 Movies
      p.text-center.text-light-50 Discover top-rated movies

    .row.justify-content-center
      each movie in movieList
        .col-xl-3.col-lg-4.col-md-6.col-sm-12.mb-4
          .movie-card
            .card-content
              img.card-img(src=`https://image.tmdb.org/t/p/w500${movie.poster_path || '/9nlyhxpszQ34joVXMM2PjXvyBvn.jpg'}`, alt=`Poster of ${movie.original_title}`)
              .overlay
                h6.card-title #{movie.original_title}
                p.text-light-50.small #{`Released: ${movie.release_date}`}